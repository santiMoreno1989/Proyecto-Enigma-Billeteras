@model enigmaBilleteras.Models.billetera

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Cargar Billetera</h1>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="marca" class="control-label">Marca</label>
                <input asp-for="marca" class="form-control" />
                <span asp-validation-for="marca" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="precio" class="control-label">Precio</label>
                <input asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="colorDisponible" class="control-label">Color Disponible</label>
                <input asp-for="colorDisponible" class="form-control" />
                <span asp-validation-for="colorDisponible" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="CalidadMaterial" class="control-label">Calidad del Material</label>
                <input asp-for="CalidadMaterial" class="form-control" />
                <span asp-validation-for="CalidadMaterial" class="text-danger"></span>
            </div>
            <!--De prueba
    <div class="form-group my-2">
        <label asp-for="ImagenBilletera" class="control-label">Imagen Billetera</label>
        <input asp-for="ImagenBilletera" class="form-control" type="file" name="imagen" />
        <span asp-validation-for="ImagenBilletera" class="text-danger"></span>
    </div> -->
            <!-- 2da prueba-->
            <div class="form-group">
                <label asp-for="ImagenBilletera" style="width: 100%;"></label>
  
                
                    <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="">
                
                <input type="file"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="ImagenBilletera"
                       class="form-control"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="ImagenBilletera" class="text-danger"></span>
            </div>


            <div class="form-group py-2">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mx-auto">
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
