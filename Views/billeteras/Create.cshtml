@model enigmaBilleteras.Models.billetera

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Cargar Billetera</h1>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="marca" class="control-label">Marca</label>
                <input asp-for="marca" class="form-control" />
                <span asp-validation-for="marca" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="precio" class="control-label">Precio</label>
                <input asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="colorDisponible" class="control-label">Color Disponible</label>
                <input asp-for="colorDisponible" class="form-control" />
                <span asp-validation-for="colorDisponible" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="CalidadMaterial" class="control-label">Calidad del Material</label>
                <input asp-for="CalidadMaterial" class="form-control" />
                <span asp-validation-for="CalidadMaterial" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mx-auto">
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
