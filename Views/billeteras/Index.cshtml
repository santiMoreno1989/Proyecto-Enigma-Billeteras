@model IEnumerable<enigmaBilleteras.Models.billetera>

@{
    ViewData["Title"] = "Inicio";
}

<h1>Inicio</h1>

<div class="text-center py-4">
    <a asp-action="Create" class="btn btn-outline-warning text-uppercase btn-lg">Crear nueva billetera</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.marca)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.colorDisponible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalidadMaterial)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.colorDisponible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalidadMaterial)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-success">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
