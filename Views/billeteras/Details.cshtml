@model enigmaBilleteras.Models.billetera

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.colorDisponible)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.colorDisponible)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CalidadMaterial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CalidadMaterial)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagenBilletera)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImagenBilletera != null)
            {
                <img src="data:image/*;base64,@(Convert.ToBase64String(Model.ImagenBilletera))" alt="" class="img-fluid imagen-galeria w-50">

            }
            else
            {
                <img src="/imagenes/not-found-image.jpg" class="img-fluid imagen-galeria w-50" />
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
