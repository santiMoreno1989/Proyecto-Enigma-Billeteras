@model enigmaBilleteras.Models.billetera

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.colorDisponible)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.colorDisponible)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CalidadMaterial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CalidadMaterial)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagenBilletera)
        </dt>
        <dd class="col-sm-10">
            <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.ImagenBilletera))">
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
